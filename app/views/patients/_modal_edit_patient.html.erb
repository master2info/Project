
<div class="modal fade" id="myModal_edit_<%= ing.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span>

                    </button>
                     <h4 class="modal-title" id="myModalLabel"> Editer un Patient</h4>
		      

                </div>              
		 
		 
<%= form_for 'patient', :url => '/patients/edit_patient', :id => "edit_patientss", :html => { :class => "form-horizontal form_patient", :id => "add_patient_form"} do |g| %>

	
	
  <div class="modal-body">
  
  <div class="row-fluid modal_mat">
    <div class="span12"> 
       
    <div class="control-group">
      <label class="control-label"> Nom</label>     
        <div class="controls">
          <div class="input-append">
            <%= g.text_field :name, :class => 'span5', :required => true, :id => 'name_patient', :value => ing.name %>
          </div>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label">Prénom</label>     
        <div class="controls">
          <div class="input-append">
            <%= g.text_field :first_name, :class => 'span5', :required => true, :id => 'first_name_patient', :value => ing.first_name %>
          </div>
        </div>
    </div>
     
     <div class="controls">
      <div class="input-append">
        <%if ing.archived == true %>
         <%= g.check_box :archived, :class => 'span5', :id => 'check', :checked => true%>           
         <%else%>
           <%= g.check_box :archived, :class => 'span5', :id => 'check', :checked => false %>           
         <%end%>
            <label class="control-label">Archivé</label> 
          </div>
        </div>
    
     <%= g.hidden_field :id, :value => ing.id %>
    </div>
    </div>
  
     <div class="actions">
    <%= g.submit 'Editer', class: 'btn btn-primary' %>
  </div>
  
        
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <!--<button type="button" class="btn btn-primary">Save</button>-->
                </div>
             </div>
	       <%end%>
            </div>
        </div>
    </div>
</div>

