
<div class="modal fade" id="myModal_up" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span>

                    </button>
                     <h4 class="modal-title" id="myModalLabel"> Les fiches des patients</h4>
		      

                </div>              
		 
		 
<%#= form_for 'fiche', :url => '/patients/up_patient', :id => "up_patientss", :html => { :class => "form-horizontal form_patient", :id => "add_patient_form", :remote => "true"} do |g| %>
  <form action="/patients/up_patient" name = "fiche" class="form-horizontal form_patient" id="up_patientss" method="post">
  <div class="modal-body">
    
  <% @patients.each do |pat|%>
  <div class="row-fluid modal_mat">
    <div class="span12"> 
       
    <div class="control-group">
	<% unless pat.archived == true%>
       <input type="checkbox" name = "archive[<%= pat.id%>]" class = "span5" value = "<%= pat.id%>" /> 
       <%else%>
	   <input type="checkbox" name = "archive[<%= pat.id%>]" class = "span5" value = "<%= pat.id%>" checked /> 
      <%end%>
       <label ><%= pat.id%></label> 
      <label ><%= pat.name%></label>     
        <label ><%=pat.first_name%></label> 
        
        </div>   
     
    </div>
    </div>
  
  <%end%>
  <%#= g.hidden_field :table, :id =>'tables'%>
  <input id="tables" name="table" type="hidden" />
 
     
      <input type="submit" value="Archiver" name ="commit" class ="btn btn-primary"/>	
    <%#= g.submit 'Archiver', class: 'btn btn-primary' %>
  
  
        
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <!--<button type="button" class="btn btn-primary">Save</button>-->
                </div>
             </div>
  </form>
            </div>
        </div>
    </div>
</div>

