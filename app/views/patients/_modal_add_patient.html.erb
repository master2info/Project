
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">x</span><span class="sr-only">Close</span>

                    </button>
                     <h4 class="modal-title" id="myModalLabel">Ajouter un Patient</h4>
		      

                </div>
                
		 
		 
<%= form_for 'patient', :url => '/patients/add_patient', :id => "add_patientss", :html => { :class => "form-horizontal form_patient", :id => "add_patient_form"} do |g| %>

	
	
  <div class="modal-body">
  
  <div class="row-fluid modal_mat">
    <div class="span12">
    
       
    <div class="control-group">
      <label class="control-label"> Nom</label>     
        <div class="controls">
          <div class="input-append">
            <%= g.text_field :name, :class => 'span5', :required => true, :id => 'name_patient' %>
          </div>
        </div>
    </div>
    
    <div class="control-group">
      <label class="control-label">Prénom</label>     
        <div class="controls">
          <div class="input-append">
            <%= g.text_field :first_name, :class => 'span5', :required => true, :id => 'first_name_patient' %>
          </div>
        </div>
    </div>
     <div class="controls">
      <div class="input-append">
        
         <%= g.check_box :archived, :class => 'span5', :id => 'check'%>           
         
            <label class="control-label">Archivé</label> 
          </div>
        </div>
    
    </div>
    </div>
     <div class="actions">
    <%= g.submit 'Save', class: 'btn btn-primary' %>
  </div>
  
        
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <!--<button type="button" class="btn btn-primary">Save</button>-->
                </div>
             </div>
	       <%end%>
            </div>
        </div>
    </div>
</div>

